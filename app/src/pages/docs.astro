---
import Layout from "../layouts/Layout.astro";

const apiUrl = import.meta.env.PUBLIC_API_URL || "http://localhost:3000";
---

<Layout title="API Documentation - Wrapper API">
    <div class="py-12 min-h-[calc(100vh-8rem)]">
        <div class="container">
            <div class="text-center mb-8">
                <h1 class="text-4xl font-bold mb-3">API Documentation</h1>
                <p class="text-lg text-text-secondary">
                    Complete reference for the Wrapper API endpoints
                </p>
            </div>

            <div
                class="p-0 overflow-hidden bg-dark-bg-secondary rounded-lg border border-dark-border-light"
            >
                <iframe
                    id="swagger-iframe"
                    src={`${apiUrl}/swagger`}
                    title="API Documentation"
                    class="w-full h-screen border-0 bg-white block"></iframe>
            </div>
        </div>
    </div>
</Layout>
