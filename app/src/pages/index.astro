---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Wrapper API - Email Receipt API Wrapper">
    <div class="min-h-screen flex items-center justify-center px-4">
        <div class="max-w-4xl w-full text-center">
            <h1
                class="text-6xl md:text-7xl font-bold mb-6 bg-gradient-to-r from-white to-accent bg-clip-text text-transparent leading-tight"
            >
                Beautiful Receipt Emails,<br />Simplified.
            </h1>
            <p class="text-xl text-text-secondary mb-12 max-w-2xl mx-auto">
                A simple API wrapper for Resend that lets you send
                professionally designed receipt emails with just one request.
            </p>
            <div class="flex gap-4 justify-center flex-wrap">
                <a
                    href="/login"
                    class="px-8 py-3 bg-accent text-dark-bg font-semibold rounded-lg hover:bg-accent/90 transition-colors"
                >
                    Login
                </a>
                <a
                    href="/register"
                    class="px-8 py-3 bg-dark-bg-tertiary text-text-primary font-semibold rounded-lg border border-dark-border-light hover:border-accent transition-colors"
                >
                    Register
                </a>
                <a
                    href="/docs"
                    class="px-8 py-3 bg-dark-bg-tertiary text-text-primary font-semibold rounded-lg border border-dark-border-light hover:border-accent transition-colors"
                >
                    Documentation
                </a>
            </div>
        </div>
    </div>
</Layout>
