---
import Layout from "../layouts/Layout.astro";
import CodeSnippet from "../components/CodeSnippet.astro";

const curlExample = `curl -X POST https://wrapper-api.com/api/send-receipt \\
  -H "X-API-Key: wp_your_api_key_here" \\
  -H "Content-Type: application/json" \\
  -d '{
    "item": "Laptop",
    "harga": "5000000",
    "email": "customer@example.com"
  }'`;

const jsExample = `const response = await fetch('https://wrapper-api.com/api/send-receipt', {
  method: 'POST',
  headers: {
    'X-API-Key': 'wp_your_api_key_here',
    'Content-Type': 'application/json'
  },
  body: JSON.stringify({
    item: 'Laptop',
    harga: '5000000',
    email: 'customer@example.com'
  })
});

const data = await response.json();
console.log(data);`;
