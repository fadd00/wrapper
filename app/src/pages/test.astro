---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Test API - Wrapper API">
    <div class="test-page">
        <div class="container">
            <div class="test-header">
                <h1>Test Your API</h1>
                <p>Send a test receipt to see your API in action</p>
            </div>

            <div class="test-card card gradient-border">
                <form id="testForm" class="test-form">
                    <div class="form-group">
                        <label for="apiKey">Your API Key *</label>
                        <input
                            type="text"
                            id="apiKey"
                            name="apiKey"
                            placeholder="wp_xxxxxxxxxxxxx"
                            pattern="wp_[a-z0-9]{32}"
                            required
                        />
                        <small
                            >Get your API key from the <a href="/dashboard"
                                >dashboard</a
                            ></small
                        >
                    </div>

                    <div class="form-group">
                        <label for="item">Item Name *</label>
                        <input
                            type="text"
                            id="item"
                            name="item"
                            placeholder="e.g., Laptop Gaming"
                            required
                        />
                    </div>

                    <div class="form-group">
                        <label for="harga">Price (Rp) *</label>
                        <input
                            type="text"
                            id="harga"
                            name="harga"
                            placeholder="e.g., 5000000"
                            pattern="[0-9]+"
                            required
                        />
                    </div>

                    <div
                        id="error"
                        class="error-message"
                        style="display: none;"
                    >
                    </div>
                    <div
                        id="success"
                        class="success-message"
                        style="display: none;"
                    >
                    </div>

                    <button type="submit" class="button primary full-width">
                        <span id="buttonText">Send Test Receipt</span>
                        <span
                            id="spinner"
                            class="spinner"
                            style="display: none;"></span>
                    </button>
                </form>

                <div class="info-box">
                    <p><strong>ℹ️ Info:</strong></p>
                    <ul>
                        <li>
                            Receipt sent to <code
                                >andhikahutama9@gmail.com</code>
                        </li>
                        <li>Sender info auto-detected from your API key</li>
                        <li>Check dashboard logs to track requests</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</Layout>

<style>
    .test-page {
        min-height: calc(100vh - 8rem);
        padding: var(--space-12) 0;
    }

    .test-header {
        text-align: center;
        margin-bottom: var(--space-8);
    }

    .test-header h1 {
        margin-bottom: var(--space-3);
    }

    .test-header p {
        font-size: 1.125rem;
        color: var(--color-text-secondary);
    }

    .test-card {
        max-width: 600px;
        margin: 0 auto;
        padding: var(--space-8);
    }

    .test-form {
        display: flex;
        flex-direction: column;
        gap: var(--space-6);
        margin-bottom: var(--space-6);
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: var(--space-2);
    }

    .form-group label {
        font-size: 0.875rem;
        font-weight: 600;
        color: var(--color-text-primary);
    }

    .form-group small {
        font-size: 0.8125rem;
        color: var(--color-text-tertiary);
    }

    .form-group small a {
        color: var(--color-accent);
        text-decoration: none;
    }

    .form-group small a:hover {
        text-decoration: underline;
    }

    .info-box {
        padding: var(--space-4);
        background-color: var(--color-bg-tertiary);
        border: 1px solid var(--color-border-light);
        border-radius: var(--radius-md);
        font-size: 0.875rem;
    }

    .info-box p {
        margin: 0 0 var(--space-2) 0;
        color: var(--color-text-secondary);
    }

    .info-box ul {
        margin: 0;
        padding-left: var(--space-5);
        color: var(--color-text-tertiary);
    }

    .info-box li {
        margin-bottom: var(--space-1);
    }

    .info-box code {
        background-color: var(--color-bg-secondary);
        padding: 2px 6px;
        border-radius: var(--radius-sm);
        font-size: 0.8125rem;
        color: var(--color-accent);
    }

    .success-message {
        padding: var(--space-3);
        background-color: rgba(0, 255, 136, 0.1);
        border: 1px solid var(--color-success);
        border-radius: var(--radius-md);
        color: var(--color-success);
        font-size: 0.875rem;
    }

    .error-message {
        padding: var(--space-3);
        background-color: rgba(255, 71, 87, 0.1);
        border: 1px solid var(--color-error);
        border-radius: var(--radius-md);
        color: var(--color-error);
        font-size: 0.875rem;
    }

    .full-width {
        width: 100%;
        justify-content: center;
    }
</style>

<script>
    const apiUrl = import.meta.env.PUBLIC_API_URL || "http://localhost:3000";
    const form = document.getElementById("testForm") as HTMLFormElement;
    const errorDiv = document.getElementById("error") as HTMLDivElement;
    const successDiv = document.getElementById("success") as HTMLDivElement;
    const buttonText = document.getElementById("buttonText") as HTMLSpanElement;
    const spinner = document.getElementById("spinner") as HTMLSpanElement;

    form.addEventListener("submit", async (e) => {
        e.preventDefault();

        const formData = new FormData(form);
        const apiKey = formData.get("apiKey") as string;
        const item = formData.get("item") as string;
        const harga = formData.get("harga") as string;

        // Hide messages
        errorDiv.style.display = "none";
        successDiv.style.display = "none";

        // Show loading
        buttonText.style.display = "none";
        spinner.style.display = "inline-block";

        try {
            const response = await fetch(`${apiUrl}/api/send-test-receipt`, {
                method: "POST",
                headers: {
                    "X-API-Key": apiKey,
                    "Content-Type": "application/json",
                },
                body: JSON.stringify({ item, harga }),
            });

            const data = await response.json();

            if (!response.ok) {
                throw new Error(data.message || "Failed to send receipt");
            }

            successDiv.textContent = `✅ Receipt sent from ${data.data.sender} to andhikahutama9@gmail.com`;
            successDiv.style.display = "block";

            // Reset form (except API key)
            const apiKeyValue = apiKey;
            form.reset();
            (document.getElementById("apiKey") as HTMLInputElement).value =
                apiKeyValue;
        } catch (error: any) {
            errorDiv.textContent = error.message;
            errorDiv.style.display = "block";
        } finally {
            buttonText.style.display = "inline";
            spinner.style.display = "none";
        }
    });
</script>
